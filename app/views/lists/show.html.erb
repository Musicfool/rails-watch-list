<div class = container>
<h2><%= @list.name %></h2>
<br>
<p><strong>Movies</strong></p>
<ul class="list-group">
  <% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <li class="list-group-item"><%= movie.title %></li>
    <li class="list-group-item"><%= movie.overview %></li>
    <li class="list-group-item"><%= movie.poster_url %></li>
    <li class="list-group-item"><%= movie.rating %></li>
    <li class="list-group-item"><%= link_to 'delete', bookmark_path(bookmark), class: "btn btn-primary mb-1", data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}%></li>
  <% end %>
</ul>
<br>
<%= link_to "My lists", lists_path %>
<%= link_to "New list", new_list_path %>
 <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-flat' %>

    </div>
</div>
